<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.main.mainViewUserController">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Shop">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView prefHeight="330.0" prefWidth="600.0">
                          <columns>
                            <TableColumn prefWidth="376.0" text="Name" />
                            <TableColumn minWidth="0.0" prefWidth="105.0" text="Quanity in cart" />
                          </columns>
                        </TableView>
                        <Button fx:id="submitPurchaseButton" layoutX="415.0" layoutY="332.0" mnemonicParsing="false" onAction="#ConfirmPurchase" text="Submit" />
                        <Button fx:id="addToCartButton" layoutX="242.0" layoutY="332.0" mnemonicParsing="false" onAction="#addToCart" text="Add to cart" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab text="Barbershop">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <DatePicker fx:id="datePicker" layoutX="41.0" layoutY="171.0" prefHeight="29.0" prefWidth="164.0" />
                        <Label layoutX="34.0" layoutY="147.0" text="Choose Date for your apointment" />
                        <Button fx:id="ConfirmBooking" layoutX="476.0" layoutY="297.0" mnemonicParsing="false" onAction="#confirmBooking" prefHeight="47.0" prefWidth="97.0" text="Book Time" />
                        <ListView layoutX="314.0" layoutY="56.0" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
